  <head>
    <%= include_gon unless @home_page %>
    <meta charset="utf-8">
    <title>ContribHub</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="ContribHub">
    <meta name="author" content="">
    <%= csrf_meta_tags %>
