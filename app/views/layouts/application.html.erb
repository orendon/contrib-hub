    <%- if @home_page %>
      <script src="https://maps.googleapis.com/maps/api/js?v=3.exp&sensor=false"></script>
      <%= javascript_include_tag "map" %>
    <% else %>
      <%= javascript_include_tag "contribhub", "tag_repo" %>
    <% end %>
